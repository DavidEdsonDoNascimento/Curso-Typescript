{
    "compilerOptions": {
        "target": "ES6",
        "outDir": "app/dist/js",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "removeComments": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "app/ts/**/*"
    ]
}